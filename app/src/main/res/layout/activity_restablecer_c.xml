<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ActivityRecuperaC">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNuevaContrasena"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>
    <TextView
            android:text="Restablecer Contraseña"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="115dp"
            android:layout_marginEnd="116dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" app:fontFamily="sans-serif-black"
            app:guidelineUseRtl="false" app:layout_wrapBehaviorInParent="included"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="Nueva Contraseña"
            android:layout_width="150dp"
            android:layout_height="21dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            android:layout_marginEnd="128dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="1.0"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            app:fontFamily="sans-serif-medium" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/txtNuevaContrasena"/>
    <TextView
            android:text="Repetir Nueva Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp" android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintHorizontal_bias="0.1" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNuevaContrasena" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/txtRepetirC"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtRepetirC"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCrear"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" android:minHeight="48dp"/>
    <Button
            android:text="Validar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCrear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" android:layout_marginEnd="157dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="169dp" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRepetirC"/>
</androidx.constraintlayout.widget.ConstraintLayout>