<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ActivityRegistrarServicio">

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptarServicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <TextView
            android:layout_width="210dp"
            android:layout_height="33dp"
            android:id="@+id/textView15"
            android:text="AÃ±os de experiencia:"
            android:textAlignment="center"
            android:textSize="20sp"
            app:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber" android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/btnAceptarServicio"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.178"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="25dp"
        android:text="Categoria:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
            android:text="REGISTRO SERVICIO PROVEEDOR"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_width="251dp"
            android:layout_height="68dp" android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="115dp"
            android:layout_marginEnd="116dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" app:fontFamily="sans-serif-black"
            app:guidelineUseRtl="false" app:layout_wrapBehaviorInParent="included"
            app:layout_constraintHorizontal_bias="0.51"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/btnAceptarServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="59dp"
        android:text="@string/dialogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>