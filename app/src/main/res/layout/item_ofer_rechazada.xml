<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/itemListaORc"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="10dp">

            <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="274dp">

                <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/numeroitemORc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numero_form"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/servicioitemORc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/servicio_form"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/fechaitemORc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/fecha_form"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/precioitemORc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/precio_form"
                            android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:text="789456"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtnroORc"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="3dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="94dp"/>
            <TextView
                    android:text="Carpinteria"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtservORc"
                    android:layout_marginEnd="92dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="31dp"
                    android:layout_below="@+id/txtnroORc"
                    android:layout_alignParentEnd="true"/>
            <TextView
                    android:text="08/10/2022"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtfecORc"
                    android:layout_marginEnd="93dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@+id/txtservORc"
                    android:layout_alignParentEnd="true"/>
            <TextView
                    android:text="$25"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtprecioORc"
                    android:layout_marginEnd="91dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="1dp"
                    android:layout_below="@+id/txtfecORc"
                    android:layout_alignParentEnd="true"/>
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="37dp"
                    app:srcCompat="@color/design_default_color_secondary_variant"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="49dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/imgitemORestadoc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="54dp"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>