<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="380dp"
                                                   android:layout_height="290dp">
    <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:id="@+id/btnACancelar"
                android:background="@drawable/ic_launcher_background"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="190dp"
                android:layout_marginTop="228dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <TextView
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginStart="27dp"
                android:layout_marginTop="130dp"
                android:text="Para realizar cambios necesita un código de verificación"
                android:textAlignment="center"
                android:textSize="18sp"
                app:fontFamily="sans-serif-medium"/>
        <Button
                android:text="Continuar"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/btnContinuar"
                android:background="@drawable/ic_launcher_background"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="228dp"
                tools:ignore="TouchTargetSizeCheck"/>
        <TextView
                android:text="Advertencia"
                android:textSize="18sp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14" app:fontFamily="sans-serif-black"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>